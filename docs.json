{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Safefy Pay",
  "colors": {
    "primary": "#10B981",
    "light": "#34D399",
    "dark": "#059669"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Guia",
        "groups": [
          {
            "group": "Visão geral",
            "pages": [
              "index",
              "quickstart"
            ]
          },
          {
            "group": "Autenticação",
            "pages": [
              "authentication"
            ]
          },
          {
            "group": "Recursos principais",
            "pages": [
              "customers",
              "transactions",
              "balance",
              "cashouts",
              "webhooks",
              "sandbox"
            ]
          },
          {
            "group": "Padrões",
            "pages": [
              "errors"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "Safefy API",
            "pages": [
              "api-reference/introduction",
              "api-reference/reference"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Status",
          "href": "https://status.safefypay.com.br",
          "icon": "signal"
        },
        {
          "anchor": "Suporte",
          "href": "mailto:suporte@safefypay.com.br",
          "icon": "life-ring"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Suporte",
        "href": "mailto:suporte@safefypay.com.br"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Portal Safefy",
      "href": "https://safefypay.com.br"
    }
  },
  "api": {
    "baseUrl": [
      "http://safefy-api-payment-staging.up.railway.app"
    ],
    "auth": {
      "method": "bearer",
      "name": "Authorization"
    },
    "playground": {
      "mode": "show"
    }
  },
  "openapi": "/api-reference/openapi.json",
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity",
     "mcp",
     "cursor",
     "vscode"
   ]
  },
  "footer": {
    "socials": {}
