		"global": {
			"anchors": [
				{
					"anchor": "Status",
					"href": "/status",
					"icon": "signal"
				},
				{
					"anchor": "Suporte",
					"href": "mailto:suporte@safefypay.com.br",
					"icon": "life-ring"
				}
			]
		}
	},
	"logo": {
		"light": "/logo/light.svg",
		"dark": "/logo/dark.svg"
	},
	"navbar": {
		"links": [
			{
				"label": "Suporte",
				"href": "mailto:suporte@safefypay.com.br"
			}
		],
		"primary": {
			"type": "button",
			"label": "Acessar Painel",
			"href": "https://app.safefypay.com.br"
		}
	},
	"api": {
		"baseUrl": ["https://api-payment.safefypay.com.br"],
		"auth": {
			"method": "bearer",
			"name": "Authorization"
		},
		"playground": {
			"display": "interactive"
		},
		"examples": {
			"languages": ["curl", "python", "javascript", "go", "java"],
			"defaults": "required",
			"prefill": true
		}
	},
	"openapi": "/api-reference/openapi.json",
	"contextual": {
		"options": ["copy", "view", "chatgpt", "claude", "perplexity", "mcp", "cursor", "vscode"]
	},
	"footer": {
		"socials": {
			"instagram": "https://www.instagram.com/safefy_pay/"
		}
	}
