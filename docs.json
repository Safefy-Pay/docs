							{
								"group": "Clientes",
								"pages": [
									"api-reference/customers/index",
									"api-reference/customers/create",
									"api-reference/customers/list",
									"api-reference/customers/get",
									"api-reference/customers/update"
								]
							},
							{
								"group": "Transações",
								"pages": [
									"api-reference/transactions/index",
									"api-reference/transactions/create",
